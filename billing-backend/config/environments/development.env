# ==============================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ==============================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database (local development)
DATABASE_URL=postgresql://billing_user:billing_pass@localhost:5432/billing_db

# Redis (local development)
REDIS_URL=redis://localhost:6379/0

# Service URLs (for local development)
SUBSCRIPTION_SERVICE_URL=http://localhost:8001
PAYMENT_SERVICE_URL=http://localhost:8002

# Security (development only - not for production)
JWT_SECRET_KEY=dev-jwt-secret-32-characters-minimum-length-key
WEBHOOK_SIGNING_SECRET=dev-webhook-secret-32-characters-minimum-length
SECRET_KEY=dev-general-secret-key-for-development-only

# Payment Gateway (development/testing)
PAYMENT_GATEWAY_BASE_URL=https://mock-gateway.example.com
PAYMENT_GATEWAY_API_KEY=mock_gateway_key_development

# Development-specific settings
ENABLE_CORS=true
ENABLE_RELOAD=true 