# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Database (production)
DATABASE_URL=postgresql://billing_user:${DB_PASSWORD}@prod-db.internal:5432/billing_db_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis (production)
REDIS_URL=redis://prod-redis.internal:6379/0
REDIS_MAX_CONNECTIONS=100

# Service URLs (production internal network)
SUBSCRIPTION_SERVICE_URL=http://subscription-service.prod.internal:8000
PAYMENT_SERVICE_URL=http://payment-service.prod.internal:8000

# Security (managed via external secret management)
JWT_SECRET_KEY=${JWT_SECRET_KEY_PROD}
WEBHOOK_SIGNING_SECRET=${WEBHOOK_SIGNING_SECRET_PROD}
SECRET_KEY=${SECRET_KEY_PROD}

# Payment Gateway (production)
PAYMENT_GATEWAY_BASE_URL=https://api.paymentgateway.com
PAYMENT_GATEWAY_API_KEY=${PAYMENT_GATEWAY_API_KEY_PROD}

# Production-specific settings
ENABLE_CORS=false
ENABLE_RELOAD=false
GATEWAY_SUCCESS_RATE=0.98
LOG_LEVEL=WARNING

# Enhanced production settings
DATABASE_POOL_SIZE=25
REDIS_MAX_CONNECTIONS=150
WEBHOOK_TIMEOUT_SECONDS=60 