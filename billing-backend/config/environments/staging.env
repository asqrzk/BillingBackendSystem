# ==============================================
# STAGING ENVIRONMENT CONFIGURATION
# ==============================================

# Environment
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Database (staging)
DATABASE_URL=postgresql://billing_user:${DB_PASSWORD}@staging-db.internal:5432/billing_db_staging

# Redis (staging)
REDIS_URL=redis://staging-redis.internal:6379/0

# Service URLs (staging internal network)
SUBSCRIPTION_SERVICE_URL=http://subscription-service.staging.internal:8000
PAYMENT_SERVICE_URL=http://payment-service.staging.internal:8000

# Security (to be set via secret management)
JWT_SECRET_KEY=${JWT_SECRET_KEY_STAGING}
WEBHOOK_SIGNING_SECRET=${WEBHOOK_SIGNING_SECRET_STAGING}
SECRET_KEY=${SECRET_KEY_STAGING}

# Payment Gateway (staging)
PAYMENT_GATEWAY_BASE_URL=https://api-staging.paymentgateway.com
PAYMENT_GATEWAY_API_KEY=${PAYMENT_GATEWAY_API_KEY_STAGING}

# Staging-specific settings
ENABLE_CORS=false
ENABLE_RELOAD=false
LOG_LEVEL=INFO 